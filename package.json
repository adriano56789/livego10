{
  "name": "livego-unified",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --exec \"node --no-warnings --loader ts-node/esm\" server.ts",
    "build": "npm run server:build && npm run build:frontend",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist-server/server.js",
    "server:start": "node dist-server/server.js",
    "server:build": "tsc -p tsconfig.server.json",
    "vps:start": "pm2 start dist-server/server.js --name \"livego-backend\"",
    "vps:reload": "pm2 reload livego-backend",
    "vps:restart": "pm2 restart livego-backend",
    "vps:stop": "pm2 stop livego-backend",
    "vps:delete": "pm2 delete livego-backend",
    "vps:logs": "pm2 logs livego-backend",
    "vps:status": "pm2 status"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "^0.468.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "socket.io-client": "^4.8.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "cors": "^2.8.5",
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.7",
    "concurrently": "^8.2.2"
  }
}